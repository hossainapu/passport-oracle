{
  "appenders": [
    {
      "type": "clustered",
      "appenders": [
        {
          "type": "dateFile",
          "filename": "_PATH_TO_YOUR_LOG_DIRECTORY/access.log",
          "pattern": "-yyyy-MM-dd",
          "category": "http"
        },
        {
          "type": "file",
          "filename": "_PATH_TO_YOUR_LOG_DIRECTORY/app.log",
          "maxLogSize": 10485760,
          "numBackups": 3
        }
      ]
    }
  ]
}
